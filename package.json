{
  "name": "@gct256/sitetool",
  "version": "2.1.0",
  "description": "site build tool",
  "main": "index",
  "typings": "types/index.d.ts",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "watch": "cross-env NODE_ENV=development rollup -c -w",
    "build": "cross-env NODE_ENV=production rollup -c",
